{
  "name": "memberHive",
  "version": "2.0.0",
  "license": "AGPL-3.0",
  "angular-cli": {},
  "repository": {
    "url": "https://github.com/digitaldeacon/memberhive2"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "build": "ng build --aot --prod",
    "extract-i18n": "cd web && ng xi18n",
    "clean-install": "npm uninstall -g angular-cli @angular/cli && npm cache clean && npm install -g @angular/cli@latest && rm -rf node_modules dist && npm install --save-dev @angular/cli@latest && npm install && cd api && rm -rf vendor/ && composer install && cd ../",
    "clean-update": "rm -rf node_modules dist && npm install && cd api && rm -rf vendor/ && composer install",
    "tslint": "tslint \"**/*.ts\" -c web/tslint.json -e \"**/blueprints/*/files/**/*.ts\" -e \"node_modules/**\" -e \"tmp/**\" -e \"dist/**\"",
    "phplint": "cd api && ./vendor/bin/phpcs --extensions=php --standard=./vendor/yiisoft/yii2-coding-standards/Yii2/ ./controllers/ ./models/ ./commands/ ./migrations/ ./config/",
    "test": "ng test",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor"
  },
  "engines": {
    "node": "^6.9"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^2.4.3",
    "@angular/compiler": "^2.4.3",
    "@angular/core": "^2.4.3",
    "@angular/flex-layout": "^2.0.0-beta.3",
    "@angular/forms": "^2.4.3",
    "@angular/http": "^2.4.3",
    "@angular/material": "https://github.com/angular/material2-builds.git",
    "@angular/platform-browser": "^2.4.3",
    "@angular/platform-browser-dynamic": "^2.4.3",
    "@angular/router": "^3.4.3",
    "hammerjs": "^2.0.8",
    "material-design-icons": "^3.0.1",
    "ng2-webstorage": "^1.5.0",
    "roboto-fontface": "^0.6.0",
    "reflect-metadata": "^0.1.3",
    "ng2-img-cropper": "*",
    "ts-helpers": "^1.1.1",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.1",
    "zone.js": "^0.7.2",
    "@covalent/core": "^1.0.0-beta.1",
    "angular2-moment": "^1.2.0"
  },
  "devDependencies": {
    "@angular/cli": "^1.0.0-beta.32.3",
    "@angular/compiler-cli": "^2.4.3",
    "@angular/platform-server": "^2.4.3",
    "@types/hammerjs": "^2.0.30",
    "@types/jasmine": "2.5.38",
    "@types/node": "^6.0.42",
    "codelyzer": "~2.0.0-beta.1",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "2.5.0",
    "karma": "1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.2.1",
    "protractor": "~4.0.13",
    "ts-node": "1.2.1",
    "tslint": "^4.3.0",
    "typescript": "~2.0.3"
  }
}
